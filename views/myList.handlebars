<div class="container">
    <h3 class="lead text-center mb-4" id="mylist">My List</h3>
    <ul class="container mb-4 list-group">
    {{#each data}}
        <li class="list-group-item">
            <div class="row">
                <div class="col-sm-6">
                    {{artist}} - {{title}}  from {{album}}
                </div>
                <div class="col-sm-2">
                    <span><i class="fab fa-creative-commons-sampling mr-2"></i>{{duration}}
                </div>
                <div class="col-sm-2">
                    <a href="{{link}}" class="btn btn-dark mb-1" target="_blank">Listen in Deezer</a></span>
                </div>
                <div class="col-sm-2">
                    <form action="/myList/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger mb-1">Delete from list</button></span>
                    </form>
                </div>
            </div>
        </li>
    {{else}}
    <div class="text-center py-3">
        <p class="lead">You don't have a playlist yet.</p>
            <a href='/' class="btn btn-secondary text-light">Add your favorite songs now.</a>
    </div>
    {{/each}}

</ul>
</div>